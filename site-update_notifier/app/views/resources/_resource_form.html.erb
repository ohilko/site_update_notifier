<%= form_for Resource.new do |f| %>
  <div class="field">
  	<%= f.label :name %>:
    <%= f.text_field :name %>

    <%= f.label :url %>:
    <%= f.text_field :url %>

    <%= f.label :timeout %>:
    <%= f.text_field :timeout %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>